<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8.0dip"
            android:text="@string/time_slot_1" />

        <Button
            android:id="@+id/step_time_slot_begin_01"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_weight="1.0"
            android:background="@drawable/border_grey"
            android:text="@string/default_hour_min" />

        <View
            android:layout_width="32.0dip"
            android:layout_height="1.0dip"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="6.0dip"
            android:background="@color/black_alpha_240" />

        <Button
            android:id="@+id/step_time_slot_end_01"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_weight="1.0"
            android:background="@drawable/border_grey"
            android:text="@string/default_hour_min" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8.0dip"
            android:text="@string/time_slot_2" />

        <Button
            android:id="@+id/step_time_slot_begin_02"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_weight="1.0"
            android:background="@drawable/border_grey"
            android:text="@string/default_hour_min" />

        <View
            android:layout_width="32.0dip"
            android:layout_height="1.0dip"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="6.0dip"
            android:background="@color/black_alpha_240" />

        <Button
            android:id="@+id/step_time_slot_end_02"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_weight="1.0"
            android:background="@drawable/border_grey"
            android:text="@string/default_hour_min" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8.0dip"
            android:text="@string/time_slot_3" />

        <Button
            android:id="@+id/step_time_slot_begin_03"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_weight="1.0"
            android:background="@drawable/border_grey"
            android:text="@string/default_hour_min" />

        <View
            android:layout_width="32.0dip"
            android:layout_height="1.0dip"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="6.0dip"
            android:background="@color/black_alpha_240" />

        <Button
            android:id="@+id/step_time_slot_end_03"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_weight="1.0"
            android:background="@drawable/border_grey"
            android:text="@string/default_hour_min" />
    </LinearLayout>
</LinearLayout>