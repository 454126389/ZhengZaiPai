<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/lib_layout_title_bar" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_half_vertical_margin"
        android:paddingTop="@dimen/activity_half_vertical_margin"
        android:text="@string/dnd_tip"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_dnd1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonMarginTop"
        android:background="@drawable/sel_common_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/iv_dnd_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/device_dnd_time_unchecked" />

        <TextView
            android:id="@+id/begin1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_marginLeft="8.0dip"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:text="@string/default_hour_min" />

        <ImageView
            android:id="@+id/v_dnd1"
            android:layout_width="0.0dip"
            android:layout_height="3.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@mipmap/device_dnd_to_unchecked" />

        <TextView
            android:id="@+id/end1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBtnHeight"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:text="@string/default_hour_min" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_compat_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dnd2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:background="@drawable/sel_common_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/iv_dnd_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/device_dnd_time_unchecked" />

        <TextView
            android:id="@+id/begin2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_marginLeft="8.0dip"
            android:gravity="center"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:text="@string/default_hour_min" />

        <ImageView
            android:id="@+id/v_dnd2"
            android:layout_width="0.0dip"
            android:layout_height="3.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@mipmap/device_dnd_to_unchecked" />

        <TextView
            android:id="@+id/end2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBtnHeight"
            android:gravity="center"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:text="@string/default_hour_min" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_compat_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dnd3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:background="@drawable/sel_common_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/iv_dnd_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/device_dnd_time_unchecked" />

        <TextView
            android:id="@+id/begin3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBtnHeight"
            android:layout_marginLeft="8.0dip"
            android:gravity="center"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:text="@string/default_hour_min" />

        <ImageView
            android:id="@+id/v_dnd3"
            android:layout_width="0.0dip"
            android:layout_height="3.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@mipmap/device_dnd_to_unchecked" />

        <TextView
            android:id="@+id/end3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBtnHeight"
            android:gravity="center"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:text="@string/default_hour_min" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_compat_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_half_vertical_margin"
            android:paddingTop="@dimen/activity_half_vertical_margin"
            android:text="@string/dnd_tip_1"
            android:textColor="@color/textHintColor" />

        <TextView
            android:id="@+id/tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_half_vertical_margin"
            android:paddingTop="@dimen/activity_half_vertical_margin"
            android:text="@string/dnd_tip"
            android:textColor="@color/textHintColor" />
    </LinearLayout>
</LinearLayout>