<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/status_bar_height">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titleBarHeight">

        <ImageView
            android:id="@+id/home_title_bar_head_img"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:src="@mipmap/device_ic_phone_headimg_default_s"
            />

        <TextView
            android:id="@+id/home_title_bar_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/home_title_bar_head_img"
            android:maxLength="8"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/home_title_bar_btn_add"
            android:layout_width="@dimen/titleBarHeight"
            android:layout_height="@dimen/titleBarHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@mipmap/ic_home_title_add_grey" />

        <ImageButton
            android:visibility="invisible"
            android:id="@+id/home_title_bar_btn_search"
            android:layout_width="@dimen/titleBarHeight"
            android:layout_height="@dimen/titleBarHeight"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/home_title_bar_btn_add"
            android:background="@null"
            android:src="@mipmap/ic_search_grey_24dp"
             />
    </RelativeLayout>
</LinearLayout>