<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffdac353" android:endColor="#ffd8832f" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/disable" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/disable" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#fffac353" android:endColor="#fff8832f" />
        </shape>
    </item>
</selector>